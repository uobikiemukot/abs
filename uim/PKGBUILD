# Contributor: noonov <noonov@gmail.com>

pkgname=uim
pkgver=1.7.0
pkgrel=1
pkgdesc="Multilingual input method library"
arch=('i686' 'x86_64')
url="http://code.google.com/p/uim/"
license=('GPL2')
depends=('libedit')
makedepends=('intltool')
source=(${pkgname}-${pkgver}.tar.bz2)

build() {
  cd ${srcdir}/${pkgname}-${pkgver%}
  ./configure --prefix=/usr --libexecdir=/usr/lib/uim \
	--enable-fep --disable-emacs \
	--without-gtk3 --without-xft --without-x \
	--without-mana --without-prime --with-skk --without-anthy-utf8 \
	--without-anthy --with-libedit
	#--disable-anthy-static --disable-dict --disable-kde-applet \
	#--disable-anthy-utf8-static --disable-qt4-qt3support \
	#--disable-debug --disable-notify \
	#--disable-kde4-applet --disable-pref \
	#--disable-default-toolkit --disable-gnome3-applet \
	#--enable-fep --disable-nls --disable-openssl \
	#--disable-emacs --disable-gnome-applet \
  make
  make DESTDIR=$pkgdir install
}
    
md5sums=('1633f131ea58b34fd85e15411e3cc363')
