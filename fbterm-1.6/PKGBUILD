# Contributor: haru <haru@nak.ics.keio.ac.jp>

pkgname=fbterm-cjk
origname=fbterm
pkgver=1.6
pkgrel=1
pkgdesc="A fast terminal emulator for linux with frame buffer device with cjk-patch"
arch=('i686' 'x86_64')
url="http://code.google.com/p/fbterm/"
license=('GPL2')
depends=('gcc-libs' 'fontconfig' 'libx86')
install=fbterm.install
source=(http://fbterm.googlecode.com/files/${origname}-${pkgver}.tar.gz \
	fbterm-1.6-aw.patch)
md5sums=('531ea0984836b58fd123e6a97a4228c6'
         '5eaa92fb3aad7e8a3442bfe8bf8714d8')

build() {
  cd ${srcdir}/${origname}-${pkgver}
  patch -p1 < ${srcdir}/fbterm-1.6-aw.patch
: << '#comment'
#comment
  ./configure --prefix=/usr/local || :
  make -j3 || return 1
  make DESTDIR=${pkgdir} install || return 1
}
