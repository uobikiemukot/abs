# Contributor: noonov <noonov@gmail.com>

pkgname=fbterm
pkgver=1.7.0
pkgrel=2
pkgdesc="A fast terminal emulator for linux with frame buffer device"
arch=('i686' 'x86_64')
url="http://code.google.com/p/fbterm/"
license=('GPL2')
depends=('gcc-libs' 'libx86' 'fontconfig')
install=fbterm.install
source=(http://fbterm.googlecode.com/files/${pkgname}-${pkgver}.tar.gz)

build() {
  cd ${srcdir}/${pkgname}-${pkgver%.?}

  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver%.?}

  make DESTDIR=${pkgdir} install
}

md5sums=('c36bae75a450df0519b4527cccaf7572')
