pkgname=cxfe
pkgver=0.9.2
pkgrel=1
pkgdesc=("CXFE - Console Xine Front End")
arch=('i686' 'x86_64')
license=('GPL')
url="http://people.iola.dk/anders/cxfe/"
depends=('xine-lib')
makedepends=()
source=("http://people.iola.dk/anders/cxfe/cxfe-0.9.2.tar.bz2" "xtitle.patch")

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  ./configure --prefix=$pkgdir/usr/local
  sed -i 's|LDFLAGS.*|LDFLAGS = `xine-config --libs` -L/usr/X11R6/lib -lXext -lxine -lncurses -lm -lXext -lX11  -lX11|' Makefile
  patch -p1 < ${srcdir}/xtitle.patch
  make
  mkdir -p $pkgdir/usr/local/bin
  make DESTDIR=$pkgdir install
}

