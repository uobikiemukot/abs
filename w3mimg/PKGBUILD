# Contributor: haru <haru@nak.ics.keio.ac.jp>

pkgname=w3mimgfb
pkgver=0.9.1
pkgrel=1
pkgdesc="Image viewer for w3m"
arch=('i686')
url="http://homepage3.nifty.com/slokar"
license=('custom')
depends=('openssl' 'gc>=7.0' 'ncurses' 'zlib')
makedepends=()
optdepends=()
source=($url/fb/$pkgname-$pkgver.tar.gz
		$url/stimg/stimg-0.1.0.tar.gz)
md5sums=('ff456a6257be4134355216c81bb0453b'
         '219a9a0197b46ba51c82a1d0cc2a544e')

build() {
  cd $srcdir/stimg-0.1.0
  ./configure --prefix=/usr
  make
  make DESTDIR=$pkgdir install
  cd $srcdir/$pkgname-$pkgver
  sed -i 's|^LDFLAGS.*|LDFLAGS= -I'$pkgdir'/usr/include -L'$pkgdir'/usr/lib|' Makefile
  sed -i 's|^CFLAGS.*|CFLAGS= -I'$pkgdir'/usr/include -L'$pkgdir'/usr/lib|' Makefile
  make
  mkdir -p $pkgdir/usr/local/bin
  install -v w3mimgdisplayfb $pkgdir/usr/local/bin
}
